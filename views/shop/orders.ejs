<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/order.css">

</head>

<body>
    <%- include('../includes/nav.ejs')%>
    <main>
        <% if (orders.length > 0) { %> 
            <ul class="orders__item">
                <% orders.forEach( order => { %>
                    <div>
                        <li class="orders__list">
                            <h1>Order - # <%= order._id %> - <a href="/order/<%= order._id %>">Download Invoice</a> </h1>
                            <ul class="products__item">
                                <% order.items.forEach(prod => { %>
                                    <li class="products__list"> <%= prod.product.title %> (<%= prod.qty %>)</li>
                                <% }) %>
                            </ul>
                            <a class="btn" href="/checkout/<%= order._id %>">Checkout</a>
                        </li>
                    </div>
                <% }) %>
            </ul>
        <%} else { %> 
            <h1> No Order yet </h1>
        <% } %>
    </main>

