<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/user-products' ? 'active' : '' %>" href="/products">Products</a></li>
            <% if(isAuth) { %>
                <li class="main-header__item"><a class="<%= path === '/user-cart' ? 'active' : '' %>" href="/cart">Cart</a></li>
                <li class="main-header__item"><a class="<%= path === '/user-orders' ? 'active' : '' %>" href="/orders">Orders</a></li>
                <li class="main-header__item"><a class="<%= path === '/addEdit-product' ? 'active' : '' %>" href="/admin/edit-product">Add Product</a></li>
                <li class="main-header__item"><a class="<%= path === '/show-product' ? 'active' : '' %>" href="/admin/show-product">Show Products</a></li>
            <% } %>
        </ul>

        <ul class="main-header__item-list">
            <% if(!isAuth) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/main-login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <button type="submit"> Logout </button> 
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

