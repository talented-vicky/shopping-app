<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include('../includes/nav.ejs')%>
    
    <main>
        <% if (passError) { %>
            <div class="message message--success"> <%= passError %> </div>
        <% } %>
        <form class="login-form" action="/passchange" method="post">
            <div class="form__container">
                <label for="pass">New Password</label>
                <input type="password" name="password" id="pass">
            </div>

            <div class="form__container">
                <label for="comfirmPass">Confirm New Password</label>
                <input type="password" name="confirmPassword" id="comfirmPass">
            </div>
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="userID" value="<%= storedUser %>">
            <input type="hidden" name="tokenID" value="<%= storedToken %>">
            <button class="btn" type="submit"> Update Password </button>
        </form>
    </main>

<%- include('../includes/tail.ejs')%>